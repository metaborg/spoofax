<configuration>
  <appender
    name="stdout"
    class="ch.qos.logback.core.ConsoleAppender"
  >
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <root level="debug">
    <appender-ref ref="stdout" />
  </root>

  <logger
    name="org.apache.commons.vfs2"
    level="warn" />
</configuration>